<odoo>
    <data>
        <record id="group_weather_user" model="res.groups">
            <field name="name">Weather User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_weather_manager" model="res.groups">
            <field name="name">Weather Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="weather_user_rule" model="ir.rule">
            <field name="name">Weather User Rule</field>
            <field name="model_id" ref="model_weather"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_weather_user'))]"/>
        </record>

        <record id="weather_manager_rule" model="ir.rule">
            <field name="name">Weather Manager Rule</field>
            <field name="model_id" ref="model_weather"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_weather_manager'))]"/>
        </record>
    </data>
</odoo>