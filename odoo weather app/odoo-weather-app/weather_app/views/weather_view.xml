<odoo>
    <data>
        <record id="view_weather_tree" model="ir.ui.view">
            <field name="name">weather.tree</field>
            <field name="model">weather.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="temperature"/>
                    <field name="humidity"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="view_weather_form" model="ir.ui.view">
            <field name="name">weather.form</field>
            <field name="model">weather.model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="temperature"/>
                            <field name="humidity"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_weather" model="ir.actions.act_window">
            <field name="name">Weather</field>
            <field name="res_model">weather.model</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="weather_menu" name="Weather" sequence="10"/>
        <menuitem id="weather_submenu" name="Weather Records" parent="weather_menu" action="action_weather" sequence="10"/>
    </data>
</odoo>